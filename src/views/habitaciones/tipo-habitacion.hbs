<div class="container p-3 m-3 mx-auto ">
    <div class="row ">
        {{#if user.usuario}}
        <div class="col-3 ">
            <div class="card text-center m-2">
                <div class="card-header" style="background-color: darkgray;">
                    <h3 align="center" style="color: black;"> Agregar Tipo de Habitacion</h3>
                </div>
                <div class="card-body">
                    <form action="/pms/tipo-habitacion" method="POST">
                        <div class="form-group">
                            <textarea id="text_descri_tipo" name="descripcion" rows="2" class="form-control" placeholder="Descripcion"
                                autofocus></textarea>
                        </div>
                        <div class="form-group">
                            <input id="precio_tipo_habi" type="text" name="precio_habitacion" class="form-control" placeholder="Precio $">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block" onclick="return ag_tipo_habi();">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        {{/if}}
        <div class="col-9"  id="tipos">
 
            {{#each habitacion}}

            <div class="card text-center m-2">
                <div class="card-body">
                    
                        <h3 class="card-title text-uppercase">
                            {{descripcion}}
                        </h3>
                    
                    <p class="m-2 text-white">$ {{precio_habitacion}} COP</p>


                    <a href="/pms/tiposs/{{id_tipo_habitacion}}" class="btn btn-success">ver habitaciones</a> 
                </div>
            </div>

            

            {{/each}}


        </div>
    </div>
</div>