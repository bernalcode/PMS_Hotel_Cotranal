<div class="container p-4">
    <div class="row">

        {{#each datosTipo}}
            <div class="col-md-3">
                <div class="card text-center p-2 m-2">
                    <div class="card-body">
                        <p>Habitacion</p>
                        <a href="#" target="blank">
                            <h3 class="card-title text-uppercase">
                                {{numero_habitacion}}
                            </h3>
                        </a>
                        <p class="m-2">$ {{precio_habitacion}} COP</p>
                        <p class="m-2">{{descripcion}}</p>
                        <br>
                        
                        
                        <a href="/pms/editar/{{id}}" class="btn btn-info">Reservar</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay Habitaciones guardados :( ...</p>
                    <a href="/pms/nu-habitacion"> Registra una aqui! </a>
                </div>
            </div>

        {{/each}}
    </div>
</div>