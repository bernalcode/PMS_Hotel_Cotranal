<div class="container p-5">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header bg-secondary">
                    <h3 class="text-center">
                        Agregar Habitacion
                    </h3>
                </div>
                <div class="card-body">
                    <form action="/pms/nu-habitacion" method="POST">
                        <div class="form-group">
                            <input type="text" name="numero_habitacion" class="form-control" placeholder="Numero Habitacion" autofocus>
                        </div>
                        <div class="form-group">
                            <h6>Seleccione el tipo:</h6>
                            
                            <select name="id_tipo_habitacion" class="form-control">
                                <option selected="true" disabled="disabled">Tipo</option>
                                {{#each habitacion}}
                                
                                <option value="{{this.id_tipo_habitacion}}"> 
                                    {{this.descripcion}}
                                </option>
                                {{/each}}
                            
                            </select>
                        </div>
                        <div class="form-group">
                            <h6>Estado Habitacion</h6>
                            <select name="estado" class="form-control">
                                <option value="Limpia">Limpia</option>
                                <option value="En Limpieza">En limpieza</option>
                                <option value="En Mantenimiento">En Mantenimiento</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>