<div class="container p-5">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card tex-center">
                <div class="card-header bg-warning">
                    <h3 align="center">
                        Editar Cliente
                    </h3>
                </div>
                <div class="card-body">
                    <form action="/pms/editar/{{dato.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" name="nombre" class="form-control" value="{{dato.nombre}}"autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="apellido" class="form-control"value="{{dato.apellido}}">
                        </div> 
                        <div class="form-group">
                            <input type="text" name="cedula" class="form-control" value="{{dato.cedula}}">
                        </div>
                        <div class="form-group">
                            <input type="text" name="celular" class="form-control" value="{{dato.celular}}">
                        </div>
                        <div class="form-group">
                            <input type="text" name="correo" class="form-control" value="{{dato.correo}}">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>